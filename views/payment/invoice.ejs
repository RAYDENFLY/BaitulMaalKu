<body>
    <!-- ======= Header ======= -->
  <header id="header" class="fixed-top d-flex align-items-center">
    <%- include('../partials/navbar') %>
  </header><!-- End Header -->

  <main id="main">
 
    
    <!-- ======= Breadcrumbs ======= -->
    <section class="breadcrumbs">
        <div class="container">
  
          <div class="d-flex justify-content-between align-items-center">
            <h2>Invoice Transaction</h2>
            <ol>
              <li><a href="/">Home</a></li>
              <li>Invoice</li>
            </ol>
          </div>
  
        </div>
      </section><!-- End Breadcrumbs -->
        <table>
            <tr>
                <th>No. Pesanan</th>
                <td><%= orderId %></td>
            </tr>
            <tr>
                <th>Nama</th>
                <td><%= nama %></td>
            </tr>
            <tr>
                <th>Email</th>
                <td><%= email %></td>
            </tr>
            <tr>
                <th>No. Pesanan</th>
                <td><%= jenisZakat %></td>
            </tr>
            <tr>
                <th>No. Telp</th>
                <td><%= notelp %></td>
            </tr>
            <tr>
                <th>Total Pembayaran</th>
                <td>Rp <%= nominal   %></td>
            </tr>
            <!-- Tambahkan kolom lain sesuai kebutuhan -->
        </table>
        <br>
        <button onclick="window.location.href='/gate/payment/download-invoice-pdf?orderId=<%= orderId %>&nama=<%= nama %>&email=<%= email %>&nominal=<%= nominal %>&jenisZakat=<%= jenisZakat %>&notelp=<%= notelp %>'" class="btn btn-primary">Download Invoice PDF</button>

    </main>
    <footer>
        <p>Terima kasih telah menggunakan layanan kami.</p>
    </footer>
